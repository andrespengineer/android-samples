<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlItemBarContainer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minWidth="280dp"
        android:background="@drawable/navigation_view_selector"
        android:padding="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPopupSongImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPopupSongName"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimarySurface"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/ivPopupSongImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPopupSongArtist"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/ivPopupSongImage"
            android:layout_below="@id/tvPopupSongName"/>

        <TextView
            android:id="@+id/tvPopupSongRatingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimarySurface"
            android:text="@string/popup_song_rate"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/ivPopupSongImage" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PopupSongRatingBar"
            style="@style/Custom.RatingBar"
            android:stepSize="1.0"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tvPopupSongRatingTitle"
            android:layout_below="@id/ivPopupSongImage"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnPopupSongSuggestion"
        android:background="@drawable/popup_song_button_selector_state"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnPrimarySurface"
        android:text="@string/popup_song_suggestion"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnPopupSongListenSpotify"
        android:background="@drawable/popup_song_button_selector_state"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnPrimarySurface"
        android:text="@string/popup_song_listen_in_spotify"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnPopupSongBack"
        android:background="@drawable/popup_song_button_selector_state"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnPrimarySurface"
        android:text="@string/popup_song_back"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="16sp"/>

</LinearLayout>
