<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlItemBarContainer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minWidth="280dp"
        android:background="@drawable/navigation_view_selector"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPopupMenuItemName"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimarySurface"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPopupMenuItemIngredients"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimarySurface"
            android:layout_below="@id/tvPopupMenuItemName"/>

        <TextView
            android:id="@+id/tvPopupMenuRatingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/popup_song_rate"
            android:textColor="?attr/colorOnPrimarySurface"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tvPopupMenuItemIngredients" />

        <RatingBar
            android:id="@+id/PopupMenuRatingBar"
            style="@style/Custom.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPopupMenuItemIngredients"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tvPopupMenuRatingTitle"
            android:stepSize="1.0" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnPopupMenuAddToCart"
        android:background="@drawable/popup_song_button_selector_state"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popup_menu_add_to_cart"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnPopupMenuBack"
        android:background="@drawable/popup_song_button_selector_state"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:text="@string/popup_song_back"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="16sp"/>

</LinearLayout>