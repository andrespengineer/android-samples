<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/etSearchSongs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:defaultQueryHint="@string/search_song_hint"
        app:queryHint="@string/search_song_hint"
        app:searchIcon="@drawable/ic_search"
        app:layout_constraintStart_toEndOf="@id/ibActionBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/ibActionBack"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="@dimen/margin_20dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etSearchSongs"
        app:layout_constraintTop_toTopOf="@id/etSearchSongs"
        app:layout_constraintBottom_toBottomOf="@id/etSearchSongs" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlaylist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:scrollbars="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ibActionBack"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvSearchSongsNoResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/search_song_no_result"
        app:layout_constraintVertical_bias=".3"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent=".7"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSearchSongSuggest"
        app:layout_constraintTop_toTopOf="@id/rvPlaylist"/>

    <Button
        android:id="@+id/btnSearchSongSuggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/search_song_suggest"
        android:textSize="@dimen/text_size_18sp"
        android:visibility="gone"
        android:layout_margin="@dimen/margin_20dp"
        tools:visibility="visible"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSearchSongsNoResult"/>



</androidx.constraintlayout.widget.ConstraintLayout>