<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_20dp">

        <TextView
            android:id="@+id/ivPickUpCameraIntent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:drawableTint="?attr/colorPrimarySurface"
            android:gravity="center"
            android:text="@string/camera"
            android:background="?attr/selectableItemBackground"
            app:drawableTopCompat="@drawable/ic_menu_camera"
            android:drawablePadding="@dimen/margin_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivPickUpGalleryIntent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/ivPickUpGalleryIntent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_gravity="center_vertical"
            android:text="@string/gallery"
            app:drawableTint="?attr/colorPrimarySurface"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            app:drawableTopCompat="@drawable/ic_menu_gallery"
            android:drawablePadding="@dimen/margin_10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPickUpCameraIntent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
