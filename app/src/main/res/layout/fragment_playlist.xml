<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nsvPlaylist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llPlaylistContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageButton
            android:id="@+id/ibPlaylistSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:padding="@dimen/margin_20dp"
            android:layout_marginHorizontal="@dimen/margin_20dp"
            android:background="@android:color/transparent"
            app:tint="?attr/colorPrimaryVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivPlaylistSongLiveImage"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPlaylistSongLiveImage"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginVertical="@dimen/margin_20dp"
            app:layout_constraintWidth_percent=".3"
            app:layout_constraintDimensionRatio="w, 1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvPlaylistSongLiveName"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Image.PILL"/>


        <TextView
            android:id="@+id/tvPlaylistSongLiveName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:gravity="center"
            app:layout_constraintWidth_percent=".5"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPlaylistSongLiveImage"
            app:layout_constraintBottom_toTopOf="@id/tvPlaylistSongLiveArtist"/>

        <TextView
            android:id="@+id/tvPlaylistSongLiveArtist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            app:layout_constraintWidth_percent=".5"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@id/tvPlaylistSongLiveName"
            app:layout_constraintBottom_toTopOf="@id/tvPlaylist_last_five"/>

        <TextView
            android:id="@+id/tvPlaylist_last_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="@string/playlist_last_five"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlaylistSongLiveArtist"
            app:layout_constraintBottom_toTopOf="@id/rvPlaylist" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:listitem="@layout/fragment_playlist_items"
            android:id="@+id/rvPlaylist"
            android:nestedScrollingEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlaylist_last_five" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
