<resources>


    <style name="Custom.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="Custom.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@animator/slide_up_animation</item>
        <item name="android:windowExitAnimation">@animator/slide_down_animation</item>
    </style>

    <style name="TextView.Bold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>


    <style name="ShapeAppearance.Image.PILL" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Image.Top.PILL" parent="">
        <item name="cornerSizeTopLeft">6dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopRight">6dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>


    <style name="StrokeText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">50sp</item>
        <item name="android:shadowColor">?attr/colorOnSurface</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
    </style>

